	public String getGenusName() {
		return genusName;
	}


	public void setGenusName(String genusName) {
		this.genusName = genusName;
	}


	public ArrayList<String> getVarSet() {
		return varSet;
	}


	public void setVarSet(ArrayList<String> varSet) {
		this.varSet = varSet;
	}


	public String getSetupCode() {
		return setupCode;
	}


	public void setSetupCode(String setupCode) {
		this.setupCode = setupCode;
	}


	public String getCode() {
		return code;
	}


	public void setCode(String code) {
		this.code = code;
	}


	public String getFunctionCallCode() {
		return functionCallCode;
	}


	public void setFunctionCallCode(String functionCallCode) {
		this.functionCallCode = functionCallCode;
	}


	public String getFunctionDecCode() {
		return functionDecCode;
